{% extends 'back.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Adresse</th>
                <th>Disponibilite</th>
                <th>Designation</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>{{ home.adresse }}</td>
                <td>{{ home.disponibilite }}</td>
                <td>{{ home.designation }}</td>
                <td><img src="{{ asset('Upload/')}}{{ home.image }}" width="100" class="img-circle" /></td>
                <td>
                    <a class="btn btn-danger" href="{{ path('delete', {'id': home.idHome}) }}">Delete</a>
                    <a class="btn btn-primary" href="{{ path('app_home_edit', {'idHome': home.idHome}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
