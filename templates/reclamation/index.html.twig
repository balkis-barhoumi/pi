{% extends 'front.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <div class="row">
        {% for r in reclamations %}
            <div class="col-lg-3 col-sm-6" style="background: blue">
                <div class="box ">  
                    <div class="img-box">
                        <img src="{{ asset('Upload/')}}{{ r.image }}" class="img1" alt="">
                    </div>
                    <div class="detail-box">
                        <h5>
                            {{ r.sujet }}
                        </h5>
                        <p>
                            {{ r.contenue }}
                        </p>
                    </div>
                    <div class="social_box">
                        <a class="btn btn-primary" href="{{ path('app_reclamation_edit', {'idReclamation': r.idReclamation}) }}">Edit</a>
                        <a class="btn btn-danger" href="{{ path('deleteReclamation', {'id': r.idReclamation}) }}">Delte</a>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
